@model RecepcionFacturas.Models.Usuario

@{
    ViewBag.Title = "Login";
}

<h2>Iniciar sesión</h2>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Nombre, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Pass, htmlAttributes: new { @class = "control-label" })
        @Html.PasswordFor(m => m.Pass, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label class="checkbox-inline">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe, "Recordarme")
        </label>
    </div>

    <div class="form-group">
        <input type="submit" value="Iniciar sesión" class="btn btn-primary" />
    </div>

    
if (!string.IsNullOrEmpty(ViewBag.Mensaje))
    {
        <div class="alert alert-@ViewBag.TipoMensaje">@ViewBag.Mensaje</div>
    }
}

