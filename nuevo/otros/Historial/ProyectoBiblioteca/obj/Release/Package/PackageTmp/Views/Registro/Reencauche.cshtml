
@{
    ViewBag.Title = "Reencauche";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="icon" type="image/png" href="~/imagenes/neumaticos.png">
</head>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-primary">
        <h6 class="m-0 font-weight-bold text-white">Lista de Inspecciones</h6>
    </div>

    <div class="card-body">

        <div class="row">

            <div class="card-body p-3">

                <hr class="mt-1 mb-1" />
                @using (Html.BeginForm("ExportarInspecciones", "Registro", FormMethod.Post))
                {
                    <div class="form-row align-items-end">
                        <div class="col-md-2">
                            <label class="form-text font-weight-bold">Fecha Inicio:</label>
                            <input name="fechainicio" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-text font-weight-bold">Fecha Fin:</label>
                            <input name="fechafin" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-block btn-success"><i class="fas fa-file-excel"></i> Exportar a Excel</button>
                        </div>
                    </div>
                }

            </div>

        </div>

        <hr />
        <div class="row">
            <div class="col-xl-12">
                <div class="table-responsive">
                    <table class="table table-bordered" id="tabla" style="width:250%" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width:0.4%"></th>
                                <th style="width:0.3%">Bitren</th>
                                <th style="width:0.3%">Equipo</th>
                                <th style="width:0.3%">Cod. Llanta</th>
                                <th style="width:0.7%">Marca</th>
                                <th style="width:0.2%">Modelo</th>
                                <th style="width:0.2%">Medida</th>
                                <th style="width:0.4%">Año Instalación</th>
                                <th style="width:0.4%">Mes Instalación</th>
                                <th style="width:0.4%">Posicion</th>
                                <th style="width:0.4%">Nro Reencauche</th>
                                <th style="width:0.5%">Fecha Inspección</th>
                                <th style="width:0.5%">Km Instalación</th>
                                <th style="width:0.5%">Km Inspección</th>
                                <th style="width:0.5%">Km Recorrido</th>
                                <th style="width:0.4%">Remanente Instalado</th>
                                <th style="width:0.5%">Remanente Inspeccion</th>
                                <th style="width:0.5%">Desgaste</th>
                                <th style="width:0.5%">Falla</th>
                                <th style="width:0.1%">Observaciones</th>
                                <th style="width:0.1%">Almacen</th>
                                <th style="width:0.2%">Estado</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th style="width:0.4%"></th>
                                <th style="width:0.3%">Bitren</th>
                                <th style="width:0.3%">Equipo</th>
                                <th style="width:0.3%">Cod. Llanta</th>
                                <th style="width:0.7%">Marca</th>
                                <th style="width:0.2%">Modelo</th>
                                <th style="width:0.2%">Medida</th>
                                <th style="width:0.4%">Año Instalación</th>
                                <th style="width:0.4%">Mes Instalación</th>
                                <th style="width:0.4%">Posicion</th>
                                <th style="width:0.4%">Nro Reencauche</th>
                                <th style="width:0.5%">Fecha Inspección</th>
                                <th style="width:0.5%">Km Instalación</th>
                                <th style="width:0.5%">Km Inspección</th>
                                <th style="width:0.5%">Km Recorrido</th>
                                <th style="width:0.4%">Remanente Instalado</th>
                                <th style="width:0.5%">Remanente Inspeccion</th>
                                <th style="width:0.5%">Desgaste</th>
                                <th style="width:0.5%">Falla</th>
                                <th style="width:0.1%">Observaciones</th>
                                <th style="width:0.1%">Almacen</th>
                                <th style="width:0.2%">Estado</th>
                            </tr>
                        </tfoot>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="FormModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="exampleModalLabel">Modificando...</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="txtidremanente" type="hidden" value="0" />
                <form id="formNivel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtcodllanta">Cod. Llanta:</label>
                                <input type="text" class="form-control required" id="txtcodllanta" name="codllanta" autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtfechainspeccion">Fecha Inspección:</label>
                                <input type="text" class="form-control required" id="txtfechainspeccion" name="fechainspeccion" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtkminspeccion">Km Inspección:</label>
                                <input type="text" class="form-control required" id="txtkminspeccion" name="kminspeccion" autocomplete="off">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtremanenteactual">Remanente Actual:</label>
                                <input type="text" class="form-control required" id="txtremanenteactual" name="remanenteactual" autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtestadooperacion">Estado Operación:</label>
                                <input type="text" class="form-control required" id="txtestadooperacion" name="estadooperacion" autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtobservaciones">Observaciones:</label>
                                <input type="text" class="form-control required" id="txtobservaciones" name="observaciones" autocomplete="off">
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>



@section scripts{

    <script>
        var tabladata;

        $(document).ready(function () {
            
            tabladata = $('#tabla').DataTable({
                responsive:true,
                "ajax": {
                    "url": '@Url.Action("ListarReencauche", "Registro")',
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [

                    {
                        "data": "idremanente", "render": function (data, type, row, meta) {

                            return $("<button>").addClass("btn btn-primary btn-editar btn-sm").append(
                                $("<i>").addClass("fas fa-pen")
                            ).attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML
                                +
                                $("<button>").addClass("btn btn-danger btn-eliminar btn-sm ml-2").append(
                                    $("<i>").addClass("fas fa-trash")
                                ).attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML;

                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "90px"
                    },

                    {
                        "data": "oVehiculo", render: function (data) {
                            return data.tipo
                        }
                    },
                    {
                        "data": "oVehiculodet", render: function (data) {
                            return data.unidad
                        }
                    },
                    { "data": "codllanta" },
                    {
                        "data": "oMarca", render: function (data) {
                            return data.marca
                        }
                    },
                    {
                        "data": "oModelo", render: function (data) {
                            return data.modelo
                        }
                    },
                    {
                        "data": "oMedida", render: function (data) {
                            return data.medida
                        }
                    },
                    { "data": "anoinstalacion" },
                    { "data": "mesinstalacion" },
                    { "data": "posicion" },
                    { "data": "nroreencauche" },
                    { "data": "fechainspeccion" },
                    { "data": "kminstalacion" },
                    { "data": "kminspeccion" },
                    { "data": "kmrecorrido" },
                    { "data": "remanentereencauche" },
                    { "data": "remanenteactual" },
                    { "data": "remanentedesgastado" },
                    { "data": "estadooperacion" },
                    { "data": "observaciones" },

                    {
                        "data": "oAlmacen", render: function (data) {
                            return data.almacen
                        }
                    },

                    {
                        "data": "estado", "render": function (data) {
                            if (data) {
                                return '<span class="badge badge-success p-2">Activo</span>'
                            } else {
                                return '<span class="badge badge-danger p-2">No Activo</span>'
                            }
                        }
                    }
                    
                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                }
            });

            $("input[name=fechainicio]").datepicker().datepicker('setDate', new Date());
            $("input[name=fechafin]").datepicker().datepicker('setDate', new Date());
        });

        $(document).on('click', '.btn-editar', function (event) {
            var json = $(this).data("informacion")

            abrirModal(json)
        });

        function abrirModal(json) {
                $("#txtidremanente").val(json.idremanente);
                $("#txtcodllanta").val(json.codllanta).prop("disabled", true);
                $("#txtfechainspeccion").val(json.fechainspeccion);
                $("#txtkminspeccion").val(json.kminspeccion);
                $("#txtremanenteactual").val(json.remanenteactual);
                $("#txtestadooperacion").val(json.estadooperacion);
                $("#txtobservaciones").val(json.observaciones);

            $('#FormModal').modal('show');
        }


        $(document).on('click', '.btn-eliminar', function (event) {
            var json = $(this).data("informacion")
                if (confirm("¿Desea eliminar el Registro?")) {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarReencauche", "Registro")',
                        type: "POST",
                        data: JSON.stringify({ id: json.idremanente}),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            if (data.resultado) {
                                tabladata.ajax.reload();
                                $('#FormModal').modal('hide');
                                swal("Mensaje", "Registro eliminado con exito!", "success")
                            } else {
                                swal("No se pudo eliminar", "warning")
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        },
                        beforeSend: function () {

                        },
                    });
                }
        });

        function Guardar() {
            var request = {
                objeto: {
                    idremanente: $("#txtidremanente").val(),
                    codllanta: $("#txtcodllanta").val(),
                    fechainspeccion: $("#txtfechainspeccion").val(),
                    kminspeccion: $("#txtkminspeccion").val(),
                    remanenteactual: $("#txtremanenteactual").val(),
                    estadooperacion: $("#txtestadooperacion").val(),
                    observaciones: $("#txtobservaciones").val()
                }
            }

            jQuery.ajax({
                url: '@Url.Action("GuardarReencauche", "Registro")',
                type: "POST",
                data: JSON.stringify(request),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.resultado) {
                        tabladata.ajax.reload();
                        $('#FormModal').modal('hide');
                        swal("Mensaje", "Registro actualizado con exito!", "success")
                    } else {
                        tabladata.ajax.reload();
                        $('#FormModal').modal('hide');
                        swal("Mensaje", "Registro actualizado con exito!", "success")
                    }
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {

                },
            });

        }


    </script>

}
