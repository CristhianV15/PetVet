@model OrdenTrabajo

@{
    ViewBag.Title = "Editar Orden de Trabajo"; // Titulo
    Layout = "~/Views/Home/_Layout.cshtml"; // Llama al layout principal (navbar)
}

<h2>Editar Orden de Trabajo</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    @await Html.PartialAsync("_Formulario", Model) <!-- Reutiliza el formulario -->
    <button type="submit" class="btn btn-success">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>